<h1>New defect</h1>

<% form_for(@defect) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project_id %><br />
    <%= f.collection_select :project_id, Project.all, :id, :name, {:prompt => 'Select...'} %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </p>
  <p>
    <%= f.label :created_at %><br />
    <%= f.datetime_select :created_at, :order => [:month,:day, :year] %>
  </p>
  <p>
    <%= f.label :reporter_id %><br />
    <%= f.collection_select :reporter_id, User.all, :id, :full_name, {:prompt => 'Select...'} %>
  </p>
  <p>
    <%= f.label :resolver_id %><br />
    <%= f.collection_select :reporter_id, User.all, :id, :full_name, {:prompt => 'Select...'} %>
  </p>
  <p>
    <%= f.label :resolved_at %><br />
    <%= f.datetime_select :resolved_at, :order => [:month,:day, :year] %>
  </p>
  <p>
    <%= f.label :source_id %><br />
    <%= f.collection_select :source_id, Source.all, :id, :name, {:prompt => 'Select...'} %>
  </p>
  <p>
    <%= f.label :severity %><br />
    <%= f.select :severity, options_for_select(["trivial", "minor", "major", "critical"]), {:prompt => 'Select...'} %>
	
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, options_for_select(["open", "nodefect", "nofix", "duplicate"]), {:prompt => 'Select...'} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', defects_path %>